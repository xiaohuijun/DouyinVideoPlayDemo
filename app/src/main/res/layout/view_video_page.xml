<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.demo.douyinvideoplay.VideoPlayView
        android:id="@+id/mDyVideoPlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.demo.douyinvideoplay.LoveAnimationView
        android:id="@+id/mLoveAinmView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.demo.douyinvideoplay.LineAnimView
        android:id="@+id/mLineAnimView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp" />

    <ImageView
        android:id="@+id/mIvCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <ProgressBar
        android:id="@+id/mPbVideo"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:max="100"
        android:maxHeight="1dp"
        android:minHeight="1dp"
        android:progress="0"
        android:progressDrawable="@drawable/video_play_progress_bar" />

    <ImageView
        android:id="@+id/mIvPlayZt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/ic_play_zt"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <com.demo.douyinvideoplay.likeBtnView.LikeButtonView
            android:id="@+id/mLikeBtnView"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
</RelativeLayout>